if [ -z ${DBT2DBNAME} ]; then
    echo "DBT2DBNAME not defined."
    exit 1
fi

while getopts "l:" OPT; do
	case ${OPT} in
	l)
		PORT=${OPTARG}
		;;
	esac
done

if [ ! "x${PORT}" = "x" ]; then
    PORTOPT="-p ${PORT}"
fi

# Create database
echo "Creating database..."
createdb ${PORTOPT} ${DBT2DBNAME} || exit 1

exit 0
